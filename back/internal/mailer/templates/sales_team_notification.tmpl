{{define "subject"}} Novo pedido de serviço recebido - GestDreams {{end}}

{{define "body"}}
<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body { font-family: "Segoe UI", Arial, sans-serif; background-color: #f9f9f9; margin: 0; padding: 0; color: #323130; }
      .container { max-width: 600px; margin: 40px auto; background: #ffffff; border-radius: 8px; overflow: hidden; box-shadow: 0 2px 8px rgba(0,0,0,0.1); border: 1px solid #e1dfdd; }
      .header { background: #d83b01; padding: 20px; text-align: center; color: #ffffff; font-size: 18px; font-weight: bold; }
      .content { padding: 30px; }
      h2 { color: #d83b01; margin-bottom: 20px; font-weight: 600; }
      .details { background: #f8f8f8; border: 1px solid #e1dfdd; border-radius: 6px; padding: 15px; margin: 25px 0; }
      .footer { text-align: center; padding: 20px; font-size: 12px; color: #605e5c; background: #f3f2f1; }
      .servicos a { display: block; margin-bottom: 5px; color: #0066cc; text-decoration: none; }
      .servicos a:hover { text-decoration: underline; }
    </style>
  </head>
  <body>
    <div class="container">
      <!-- Cabeçalho -->
      <div class="header">
        Novo Pedido de Cliente
      </div>

      <!-- Conteúdo -->
      <div class="content">
        <h2>Detalhes do Cliente</h2>
        <div class="details">
          <p><b>Nome:</b> {{.Cliente}}</p>
          <p><b>Email:</b> {{.Email}}</p>
          <p><b>Contacto:</b> {{.Telefone}}</p>
          <p><b>Empresa:</b> {{.Empresa}}</p>
          <p><b>Cidade:</b> {{.Cidade}}</p>
          <p><b>Setor:</b> {{.Setor}}</p>
          <p><b>Área de atuação:</b> {{.Atuacao}}</p>
          <p><b>Porte da empresa:</b> {{.Porte}}</p>

          <p><b>Serviço(s) solicitado(s):</b></p>
          <div class="servicos">
            {{range .Servicos}}
              <a href="{{.}}" target="_blank">{{.}}</a>
            {{end}}
          </div>

          <p><b>Data/Hora do Pedido:</b> {{.Data}}</p>
        </div>

        <p>Favor entrar em contacto com o cliente o mais rápido possível.</p>
      </div>

      <!-- Rodapé -->
      <div class="footer">
        &copy; {{.Data}} GestDreams - Notificação Interna
      </div>
    </div>
  </body>
</html>
{{end}}